<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.controller.ClienteController" spacing="10" padding="10">
    <Label text="Gestión de Clientes" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nombreTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Identificación:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="identificacionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Celular:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="celularTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="correoTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="direccionTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Agregar" fx:id="agregarButton" onAction="#agregarCliente"/>
        <Button text="Actualizar" fx:id="actualizarButton" onAction="#actualizarCliente"/>
        <Button text="Eliminar" fx:id="eliminarButton" onAction="#eliminarCliente"/>
        <Button text="Limpiar" fx:id="limpiarButton" onAction="#limpiarFormulario"/>
    </HBox>

    <TableView fx:id="tablaClientes" prefHeight="200">
        <TableColumn text="Nombre" fx:id="nombreColumn"/>
        <TableColumn text="Identificación" fx:id="identificacionColumn"/>
        <TableColumn text="Celular" fx:id="celularColumn"/>
        <TableColumn text="Correo" fx:id="correoColumn"/>
        <TableColumn text="Dirección" fx:id="direccionColumn"/>
    </TableView>
</VBox>
